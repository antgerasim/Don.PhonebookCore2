@using Don.PhonebookCore2.Authorization
@using Don.PhonebookCore2.Domain.Persons
@using Don.PhonebookCore2.Web.Models.Common.Modals
@using Don.PhonebookCore2.Web.Models.PhoneBook
@using Don.PhonebookCore2.Web.Startup
@model Don.PhonebookCore2.Web.Models.PhoneBook.IndexViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    /*    ViewBag.CurrentPageName = AppPageNames.Tenant.PhoneBook;*/
    ViewBag.CurrentPageName = PageNames.PhoneBook; //this goes to _layout and to component as active 
}

@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/PhoneBook/Index.js" asp-append-version="true"></script>
    </environment>
}


<div class="row m-b-5">
    <div class="col-xs-12">
        <div class="pull-right">
            @*        <button id="CreateNewPersonButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewPerson")</button>*@
            @if (IsGranted(PermissionNames.Pages_Tenant_PhoneBook_CreatePerson))
            {
                <button id="CreateNewPersonButton" class="btn btn-primary blue" data-toggle="modal" data-target="#PersonCreateModal">
                    <i class="fa fa-plus"></i> @L("CreateNewPerson")
                </button>
            }
        </div>
        <div class="panel">
            <div class="panel-heading">
                <div class="panel-title">
                    <h1>
                        <span>@L("PhoneBook")</span>
                    </h1>
                </div>

            </div>

            <div class="panel-body">
                <div class="list-group" id="AllPeopleList">
                    <h3>All People (@Model.Items.Count)</h3>

                    <div class="">
                        <div class="">

                            <form action="@Url.Action("Index")" method="get">
                                <div class="input-group">
                                    <input id="FilterPeopleText" name="Filter" value="@Model.Filter" class="form-control" placeholder="@L("SearchWithThreeDot")" type="text">
                                    <span class="input-group-btn">
                                        <button id="FilterPeopleButton" class="btn btn-default " type="submit">
                                            <i class="search-icon material-icons">search</i>
                                        </button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>
                    @foreach (var person in Model.Items)
                    {
                        <a href="javascript:;" class="list-group-item" data-person-id="@person.Id">
                            <h4 class="list-group-item-heading">
                                @person.Name @person.Surname
                                @if (IsGranted(PermissionNames.Pages_Tenant_PhoneBook_CreatePerson))
                                {
                                    <button title="@L("Delete")" class="btn btn-circle bg-red delete-person pull-right" href="javascript:;">
                                        <i class="fa fa-trash-o"></i>
                                    </button>
                                }
                            </h4>

                            <p class="list-group-item-text">
                                @person.EmailAddress
                            </p>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="PersonCreateModal" tabindex="-1" role="dialog" aria-labelledby="RoleCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @Html.Partial("Modals/_ModalHeader", new ModalHeaderViewModel(L("CreateNewPerson")))
            <div class="modal-body">
                <form role="form" name="personCreateForm" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="validate form-control" type="text" name="Name" required maxlength="@Person.MaxNameLength"/>
                                    <label class="form-label">@L("Name")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="validate form-control" type="text" name="Surname" required maxlength="@Person.MaxSurnameLength"/>
                                    <label class="form-label">@L("Surname")</label>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="validate form-line">
                                    <input class="form-control" type="email" name="EmailAddress" required maxlength="@Person.MaxEmailAddressLength"/>
                                    <label class="form-label">@L("EmailAddress")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    @Html.Partial("Modals/_ModalFooterWithSaveAndCancel");
                </form>
            </div>
        </div>
    </div>
</div>


