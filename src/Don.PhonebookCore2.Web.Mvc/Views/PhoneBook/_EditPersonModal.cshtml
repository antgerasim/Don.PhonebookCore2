@using Don.PhonebookCore2.Domain.Persons
@using Don.PhonebookCore2.Web.Models.Common.Modals
@using Don.PhonebookCore2.Web.Models.PhoneBook
@model Don.PhonebookCore2.Web.Models.PhoneBook.EditPersonViewModel


<div class="modal fade" id="RoleCreateModal" tabindex="-1" role="dialog" aria-labelledby="RoleCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @Html.Partial("Modals/_ModalHeader", new ModalHeaderViewModel("Edit Person"))
            <div class="modal-body">
                <form role="form" novalidate class="form-validation">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="form-control" type="text" name="Name" value="@Model.Name" required maxlength="@Person.MaxNameLength" />
                                    <label class="form-label">@L("Name")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="form-control" type="text" name="Surname" value="@Model.Surname" required maxlength="@Person.MaxSurnameLength" />
                                    <label class="form-label">@L("Surname")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="form-control" type="email" name="EmailAddress" value="@Model.EmailAddress" required maxlength="@Person.MaxEmailAddressLength" />
                                    <label class="form-label">@L("EmailAddress")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            @Html.Partial("Modals/_ModalFooterWithSaveAndCancel")

        </div>
    </div>
</div>