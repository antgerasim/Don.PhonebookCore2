@using Don.PhonebookCore2.Domain.Persons
@using Don.PhonebookCore2.Web.Models.Common.Modals

@{
    Layout = null;
}


<div class="modal fade" id="RoleCreateModal" tabindex="-1" role="dialog" aria-labelledby="RoleCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        @*    @Html.Partial("Modals/_ModalHeader", new ModalHeaderViewModel("CreateNewPerson"))*@
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">
                    <span>@Html.Raw(Model.Title)</span>
                </h4>
            </div>
            <div class="modal-body">
                <form role="form" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="form-control" type="text" name="Name" required maxlength="@Person.MaxNameLength"/>
                                    @*       <label class="form-label">@L("Name")</label>*@
                                    <label class="form-label">Name</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="form-control" type="text" name="Surname" required maxlength="@Person.MaxSurnameLength"/>
                                    @* <label class="form-label">@L("Surname")</label>*@
                                    <label class="form-label">Surname</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input class="form-control" type="email" name="EmailAddress" required maxlength="@Person.MaxEmailAddressLength"/>
                                    @*      <label class="form-label">@L("Surname")</label>*@
                                    <label class="form-label">Surname</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*        @Html.Partial("Modals/_ModalFooterWithSaveAndCancel");*@
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default close-button waves-effect" data-dismiss="modal">"Cancel"</button>
                        <button type="button" class="btn btn-primary save-button waves-effect">"Save"</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>