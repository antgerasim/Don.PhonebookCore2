@using Don.PhonebookCore2.Domain.Persons
@using Don.PhonebookCore2.Web.Models.Common.Modals
@model Don.PhonebookCore2.Web.Models.PhoneBook.EditPersonViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditPerson")))

<div class="modal-body">
    <form name="PersonEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Person.Id"/>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="personName" type="text" name="Name" value="@Model.Person.Name" required maxlength="@Person.MaxNameLength" class="validate form-control"/>
                        <label for="personName" class="form-label">@L("Name")</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="surName" class=" validate form-control" type="text" name="Surname" value="@Model.Person.Surname" required maxlength="@Person.MaxSurnameLength"/>
                        <label for="surName" class="form-label">@L("Surname")</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="emailAddress" class="validate form-control" type="email" name="EmailAddress" value="@Model.Person.EmailAddress" required maxlength="@Person.MaxEmailAddressLength"/>
                        <label for="emailAddress" class="form-label">@L("EmailAddress")</label>
                    </div>
                </div>
            </div>
        </div>
        @Html.Partial("Modals/_ModalFooterWithSaveAndCancel")
    </form>
</div>


<script src="~/view-resources/Views/PhoneBook/_PersonEditModal.js" asp-append-version="true"></script>