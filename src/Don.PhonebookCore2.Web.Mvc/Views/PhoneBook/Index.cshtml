@using Don.PhonebookCore2.Web.Startup
@model Don.PhonebookCore2.Web.Controllers.IndexViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
/*    ViewBag.CurrentPageName = AppPageNames.Tenant.PhoneBook;*/
        ViewBag.CurrentPageName = PageNames.PhoneBook;//this goes to _layout and to component as active 
}

<div class="row m-b-5">
    <div class="col-xs-12">
        <div class="panel">
            <div class="panel-heading">
                <div class="panel-title">
                    <h1>
                        <span>@L("PhoneBook")</span>
                    </h1>
                </div>
            </div>
            <div class="panel-body">
                <div class="list-group">
                    @foreach (var person in Model.Items)
                    {
                        <a href="javascript:;" class="list-group-item">
                            <h4 class="list-group-item-heading">
                                @person.Name @person.Surname
                            </h4>
                            <p class="list-group-item-text">
                                @person.EmailAddress
                            </p>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        <button id="CreateNewPersonButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewPerson")</button>
    </div>
</div>


<div class="modal fade" id="UserCreateModal" tabindex="-1" role="dialog" aria-labelledby="UserEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>

